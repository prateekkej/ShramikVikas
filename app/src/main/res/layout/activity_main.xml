<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shramikvikas.LoginActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/fl"
        android:clickable="false"
        android:layout_alignTop="@+id/signInButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


    </FrameLayout>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:animationCache="true"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        app:buttonSize="wide"
        android:foregroundTint="@color/colorPrimary"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.gms.common.SignInButton>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="5dp"
        android:layout_below="@+id/login_button"
        android:layout_alignRight="@+id/fl"
        android:layout_alignEnd="@+id/fl"
        android:layout_marginTop="11dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_email_black_48dp"
                    android:id="@+id/imageView1"
                    android:layout_weight="1"
                    android:layout_margin="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:id="@+id/editText7"
                    android:hint="Email Address"
                    android:layout_weight="3"
                    android:elevation="2dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="5dp"
                    android:textColorLink="@color/colorPrimaryDark" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lock_outline_black_48dp"
                    android:id="@+id/imageView"
                    android:layout_margin="10dp"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editText8"
                    android:layout_weight="3"
                    android:hint="Password"
                    android:layout_marginLeft="5dp"
                    android:textColorLink="@color/colorPrimaryDark" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <Button
                    android:text="Forgot Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/forgot"
                    android:elevation="2dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_weight="1" />

                <Button
                    android:text="Log In"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signin"
                    android:background="?attr/selectableItemBackground"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    />

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:text="Sign up "
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:elevation="4dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/signInButton"
        android:layout_toEndOf="@+id/signInButton"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOT REGISTERED YET?"
        android:layout_alignBaseline="@+id/register"
        android:layout_alignBottom="@+id/register"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/textView5"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/mainscreenlogo"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/signInButton"
        android:elevation="2dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

