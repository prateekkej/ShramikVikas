<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"

    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/registration_barr" android:layout_width="match_parent"
        android:layout_height="60dp">

        <view
            android:layout_width="match_parent"
            class="com.shramikvikas.CustomViews.ourTextView"
            android:id="@+id/view3"
            android:text="Register"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:textStyle="normal|bold"
            android:textAlignment="gravity"
            android:padding="5dp"
            android:textSize="35dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal" />

        <ImageButton
            android:layout_height="match_parent"
            app:srcCompat="?attr/homeAsUpIndicator"
            android:id="@+id/Home"
            android:background="?attr/selectableItemBackground"
            android:layout_width="50dp"
            android:layout_alignBottom="@+id/view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:tint="@android:color/white" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:contentPadding="10dp"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/cardregister"
        android:layout_below="@+id/registration_barr">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:elevation="2dp"
            android:paddingLeft="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="First Name    "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/fname"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="First Name"
                    android:capitalize="characters"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="Last Name "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/lname"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="Phone Number "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phNumber"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="Email Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <EditText
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/emailid"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp">

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="Address "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textColor="@color/colorText"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPostalAddress"
                    android:ems="10"
                    android:id="@+id/address"
                    android:layout_weight="1"
                    android:textSize="17sp"
                    android:maxLines="6" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <com.shramikvikas.CustomViews.ourTextView
                    android:text="Password "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textColor="@color/colorText"
                    android:textSize="16sp"/>

                <EditText

                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/numericpin"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:inputType="textPassword" />
            </TableRow>
            <RelativeLayout android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/ic_lock_outline_black_48dp"
                    android:id="@+id/pass"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

        </TableLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cardregister"
        android:layout_alignEnd="@+id/cardregister"
        android:layout_marginLeft="10dp">

        <Button
            android:text="Sign Up"
            android:id="@+id/signup"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="false" />
    </FrameLayout>


</RelativeLayout>
